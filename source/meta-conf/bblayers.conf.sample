# changes incompatibly
POKY_BBLAYERS_CONF_VERSION = "2"

BBPATH = "${TOPDIR}"
BBFILES ?= ""

BBLAYERS ?= " \
  /home/ubuntu/yocto/poky/meta \
  /home/ubuntu/yocto/poky/meta-poky \
  /home/ubuntu/yocto/poky/meta-yocto-bsp \
  /home/ubuntu/yocto/poky/meta-mine \
  "
